FROM nginx:alpine

ARG KEYCLOAK_ANGULAR_APP_CLIENT_ID
ARG NGINX_ANGULAR_PORT
ENV KEYCLOAK_ANGULAR_APP_CLIENT_ID=${KEYCLOAK_ANGULAR_APP_CLIENT_ID}
ENV NGINX_ANGULAR_PORT=${NGINX_ANGULAR_PORT}

COPY dist/bank-account-app-front/browser /usr/share/nginx/html
EXPOSE ${NGINX_ANGULAR_PORT}
CMD ["nginx", "-g", "daemon off;"]
